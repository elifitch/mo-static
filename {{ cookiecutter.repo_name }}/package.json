{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "0.2.0",
  "description": "{{ cookiecutter.description }}",
  "scripts": {
    "start": "gulp build-dev",
    "build": "gulp build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "{{ cookiecutter.author }}",
  "devDependencies": {
    "autoprefixer": "6.1.0",
    "babel-preset-es2015": "6.1.4",
    "babelify": "7.2.0",
    "browser-sync": "2.10.0",
    "browserify": "12.0.1",
    {% if cookiecutter.use_foundation == 'y' -%}
    "browserify-shim": "3.8.12",
    {%- endif %}
    "critical": "0.6.0",
    "del": "2.0.2",
    "gulp": "3.9.0",
    "gulp-concat": "2.6.0",
    "gulp-cssnano": "2.1.0",
    "gulp-htmlmin": "1.2.0",
    "gulp-if": "2.0.0",
    "gulp-nunjucks-render": "1.0.0",
    "gulp-postcss": "6.0.1",
    "gulp-rev": "6.0.1",
    "gulp-rev-replace": "0.4.2",
    "gulp-sass": "2.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "1.4.2",
    "gulp-util": "3.0.6",
    "run-sequence": "1.1.4",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0",
    "watchify": "3.6.0"
  },
  {% if cookiecutter.use_foundation == 'y' -%}
  "dependencies": {
    "foundation-sites": "6.1.2",
    "jquery": "2.1.4"
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": "foundation"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  {%- endif %}
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.0"
  }
}
